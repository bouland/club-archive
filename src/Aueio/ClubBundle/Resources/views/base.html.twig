{# src/Aueio/ClubBundle/Resources/views/base.html.twig #}
{% extends '::base.html.twig' %}

{% block stylesheets %}
	{% stylesheets
	    '@AueioClubBundle/Resources/public/css/*'
	%}
		<link rel="stylesheet" href="{{ asset_url }}" />
	{% endstylesheets %}

	<style type="text/css">
a{
	color: rgb({{ app.session.get('context.season_color') }});
}
#sidebar_menu > li.selected > a,
#sidebar_menu > li:hover > a{
	background-color: rgb({{ app.session.get('context.season_color') }});
	color: white;
}
#header_menu > li.selected > a,
#header_menu > li:hover > a {
    background-color: white;
    color: rgb({{ app.session.get('context.season_color') }});		
}
input[type="submit"] {
	background-color: rgb({{ app.session.get('context.season_color') }});
	border-color: rgb({{ app.session.get('context.season_color') }});
}
	</style>
{% endblock %}

{% block javascripts %}
	{% javascripts '@AueioClubBundle/Resources/public/js/lib/jquery.min.js' %}
    	<script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}