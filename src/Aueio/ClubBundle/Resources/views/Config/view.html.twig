{# src/Aueio/ClubBundle/Resources/views/Config/view.html.twig #}
{% extends 'AueioClubBundle::layout.html.twig' %}

{% block title %}
	{{ 'config.title.view'|trans({}, 'AueioClubBundle') }}
{% endblock %}

{% block header_menu %}
	{% include 'AueioClubBundle::tab.menu.html.twig' with {'selected': "config"} %}
{% endblock %}

{% block sidebar %}
	{% if config %}
		<li  class="selected"><a href="{{ path('aueio_club_config_view', {"id": config.id}) }}">{{ 'sidebar.view'|trans({}, 'AueioClubBundle') }}</a>
		<li><a href="{{ path('aueio_club_config_edit', {"id": config.id}) }}">{{ 'sidebar.edit'|trans({}, 'AueioClubBundle') }}</a>
		<li><a href="{{ path('aueio_club_config_delete', {"id": config.id}) }}">{{ 'sidebar.delete'|trans({}, 'AueioClubBundle') }}</a></li>
	{% else %}
		<li><a href="{{ path('aueio_club_config_new') }}">{{ 'sidebar.new'|trans({}, 'AueioClubBundle') }}</a></li>
	{% endif %}
{% endblock %}

{% block content %}
	{% if config %}
		<p> Team default : {{ config.teamDefault}}</p>
		<p> Saison en cours : {{ config.seasonCurrent}}</p>
		<p> Secret : {{ config.secret}}</p>
	{% else %}
		<p> Pas de config</p>
	{% endif %}
{% endblock %}
