{# src/Aueio/ClubBundle/Resources/views/Team/form.html.twig #}
<div class="team-view full">
	<div id="team-header">
		<div id="team-desc" class="team-col">
			<div id="team-avatar"
				<img alt="team photo" title="photo" src="http://hand/bundles/aueioclub/images/logo.jpeg">
			</div>
			<p>
				{{ form_errors(form.name) }}
				{{ form_label(form.name, 'Club') }} {{ form_widget(form.name, { 'attr': { 'size' : 31, 'maxlength' : 50} }) }}
			</p>
		</div><div id="team-contact" class="team-col">
			<p>
				{{ form_errors(form.contacts) }}
				{{ form_label(form.contacts, 'Contacts') }} {{ form_widget(form.contacts) }}
			</p>
			<h4>
				{{ form_errors(form.adress) }}
				{{ form_label(form.adress, 'Adresse') }}
			</h4>
			<p>
				{{ form_widget(form.adress, { 'attr': { 'resize' : 'none', 'maxlength' : 255} }) }}
			</p>
		</div>
	</div>
</div>

{{ form_rest(form) }}

<input type="submit" value="Save" />