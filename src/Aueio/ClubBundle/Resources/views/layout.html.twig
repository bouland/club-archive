{# src/Aueio/ClubBundle/Resources/views/layout.html.twig #}
{% extends 'AueioClubBundle::base.html.twig' %}

{% block body %}

	<div id="header" >
		<div class="inner">
			<div id="header_title">
				<h1>		
					<a href="{{ path('_welcome') }}">Meylan Handball Club</a>
				</h1>
			</div>
			<ul id="header_menu" class="clearfix">
			{% block header_menu %}
			{% endblock %}
		    </ul>
	    </div>
	</div>
	<div id="wrapper">
		<div class="inner">
			<div id="layout">
				<div id="sidebar">
		       		 <ul id="sidebar_menu">
		            {% block sidebar %}
		            {% endblock %}
		            </ul>
		        </div>

		        <div id="content">
		            {% block content %}
		            {% endblock %}
		        </div>
	        </div>
	    </div>
     </div>
     
     <div id="footer">
		<div class="inner">
			<div id="footer_menu">
				<ul>
				{% block footer_menu %}
			    {% endblock %}
			    </ul>
		    </div>
	    </div>
	</div>
        
{% endblock %}