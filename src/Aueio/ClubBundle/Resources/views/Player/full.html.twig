{# src/Aueio/ClubBundle/Resources/views/Player/full.html.twig #}
<div class="full">
	<div id="player-header">
		<div id="player-desc" class="cols">
			<p>{{ 'player.surname'|trans({}, 'AueioClubBundle') }} : {{ player.surname }}</p>
			{% if player.id == app.user.id %}
			<p>{{ 'player.username'|trans({}, 'AueioClubBundle') }} : {{ player.username }}</p>
			{% endif %}
			<p>{{ 'player.position'|trans({}, 'AueioClubBundle') }} : {{ ('player.' ~ player.position)|trans({}, 'AueioClubBundle') }}</p>
			<p>{{ 'player.hand'|trans({}, 'AueioClubBundle') }} : {{ ('player.' ~ player.hand)|trans({}, 'AueioClubBundle') }}</p>
			{% if player.car %}
			<p>possède un véhicule</p>
			{% else %}
			<p>ne possède pas de véhicule</p>
			{% endif %}
		</div><div id="player-contact" class="cols">
			<p>{{ player.firstname }} {{ player.lastname }}</p>
			<p>{{ player.email }}</p>
			<p>{{ player.phone }}</p>
			<p>{{ player.adress}}</p>
		</div>
	</div>
	<div id="player-teams" class="cols">
		<h3>Team</h3>{% include 'AueioClubBundle:Team:link.html.twig' with {'team': player.team} %}</p>
	</div>
	<div class="stats">
		<h3>Statistiques</h3>
		<ul>
{% if stats['play'] > 0 %}
			<li>
				<ul class="stats-results">
					<li class="games-win {% if stats['win'] >= (stats['play']-stats['win']) %}green{% endif %}">{{ stats['win'] }} ({{ (stats['win']*100)//stats['play'] }}%) Victoires</li>
					<li class="games-lost {% if stats['lost'] >= (stats['play']-stats['lost']) %}red{% endif %}">{{ stats['lost'] }} ({{ (stats['lost']*100)//stats['play'] }}%) Défaites</li>
					<li class="games-nul {% if stats['nul'] >= (stats['play']-stats['nul']) %}blue{% endif %}">{{ stats['nul'] }} ({{ (stats['nul']*100)//stats['play'] }}%) Nuls</li>
				</ul>
			</li>
{% endif %}
{% if stats['total'] > 0 %}
			<li>
				<ul class="stats-games">
					<li class="games-play {% if stats['play'] >= (stats['total']-stats['play']) %}green{% endif %}">{{ stats['play'] }} ({{ (stats['play']*100)//stats['total'] }}%) Présent</li>
					<li class="games-miss {% if stats['miss'] >= (stats['total']-stats['miss']) %}red{% endif %}">{{ stats['miss'] }} ({{ (stats['miss']*100)//stats['total'] }}%) Absent</li>
					<li class="games-total {% if stats['total'] != (stats['play']+stats['miss']) %}red{% endif %}">{{ stats['total'] }} ({{ ((stats['play']+stats['miss'])*100)//stats['total'] }}%) Matchs</li>
				</ul>
			</li>
{% endif %}
{% if stats['play'] > 0 %}
			<li>
				<ul class="stats-actions">
					<li class="games-score">{{ stats['score'] }}({{ ((stats['score']*100)//stats['play'])/100 }}) Buts</li>
					<li class="games-shop {% if stats['shop'] < 1 %}red{% endif %}">{{ stats['shop'] }} Courses</li>
					<li class="games-referee {% if stats['referee'] < 2 %}red{% endif %}">{{ stats['referee'] }} Arbitrages</li>
				</ul>
			</li>
{% endif %}
		</ul>
		{% if stats['total'] != (stats['play']+stats['miss']) %}
		<p>Matchs est en rouge car il doit etre à 100% sinon les stats sont biaisées. Tu n'as pas répondu à toutes les sélections</p>
		{% endif %}
	</div>
</div>
