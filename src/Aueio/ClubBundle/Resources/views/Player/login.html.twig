{# src/Aueio/ClubBundle/Resources/views/Player/view.html.twig #}
{% extends 'AueioClubBundle::layout.html.twig' %}

{% block title %}
	Login
{% endblock %}

{% block header_menu %}
	{% include 'AueioClubBundle:Player:header.html.twig' %}
{% endblock %}

{% block sidebar %}
	<li><a href="{{ path('fos_user_resetting_request') }}">{{ 'resetting.lost'|trans({}, 'AueioClubBundle') }}</a></li>
{% endblock %}


{% block content %}
	{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
	{% endif %}
	<form action="{{ path("fos_user_security_check") }}" method="post" class="fos_user_login">
	    <div>
		    <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
		    <input type="text" id="username" name="_username" value="{{ last_username }}" />
		</div>
		<div>
	    	<label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
	    	<input type="password" id="password" name="_password" />
		</div>
		<div>
	        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
		    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
		</div>
		<div>
	        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
			<input class="button button-submit" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
		</div>
	</form>
{% endblock %}
