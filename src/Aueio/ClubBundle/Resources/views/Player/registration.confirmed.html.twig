{# src/Aueio/ClubBundle/Resources/views/Player/view.html.twig #}
{% extends 'AueioClubBundle::layout.html.twig' %}

{% block title %}
	Login
{% endblock %}

{% block header_menu %}
	{% include 'AueioClubBundle::header.html.twig' %}
{% endblock %}

{% block content %}
	<div id="player-login">
    <p>{% autoescape false %}{{ 'registration.confirmed'|trans({'%username%': user.username}, 'FOSUserBundle') }}{% endautoescape %}</p>
    {% if app.session is not empty %}
        {% set targetUrl = app.session.get('_security.target_path') %}
        {% if targetUrl is not empty %}<p><a href="{{ targetUrl }}">{{ 'registration.back'|trans({}, 'FOSUserBundle') }}</a></p>{% endif %}
    {% endif %}
	</div>
{% endblock %}

